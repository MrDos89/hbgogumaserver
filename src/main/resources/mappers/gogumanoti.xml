<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="himedia.hbgoguma.mappers.GogumaNotificationMapper">
	<select id="selectAll" 
		resultType="gogumaNoti">
	SELECT * FROM goguma_notification ORDER BY uid DESC
	</select>
	
	<select id="selectOne"
		parameterType="long"
		resultType="gogumaNoti">
	SELECT * FROM goguma_notification WHERE id=#{id}
	</select>
	
	<insert id="insert" parameterType="gogumaNoti">
	INSERT INTO goguma_notification (name, hp, tel)
	VALUES(#{name}, #{hp}, #{tel})
	</insert>
	
	<update id="update" parameterType="gogumaNoti">
	UPDATE goguma_notification SET
	name=#{name}, hp=#{hp}, tel=#{tel}
	WHERE id=#{id}
	</update>

	<delete id="delete" parameterType="int">
	DELETE FROM goguma_notification WHERE id=#{id}
	</delete>
</mapper>